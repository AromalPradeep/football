# Screen_0 : Loading
<ScreenZero>:
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            #source: 'bg.jpg'      
    
    Image:
        source: 'foot_load02.gif'
        anim_delay: 0.1
        #size_hint: 1,1
                
    MLabel:
        text: "Press any button to continue."
        #size_hint: 1,1 
        pos: 0,-100
            

# Screen_1 : Menu - focus / task
<ScreenOne>:
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg' 
            
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 20
        
        MLabel:
            text: "[b]MENU[/b]"
            markup: True
        
        MButton:
            text: "Teams"
            #size_hint: 1,0.5
            on_release: root.manager.current = "screen2" 
        
        #MButton:
        #    text: "Players"
        #    #size_hint: 1,0.5
        #    on_release: root.manager.current = "screen3"
         
