# Screen_2 : Teams
<ScreenTwo>:

    #rv: rv
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg' 
    
    BoxLayout:
        orientation: "vertical"

        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 9

            MLabel:
                text: "Team_id"
            MLabel:
                text: "Team_name"            
            MLabel:
                text: "Manager"
            MLabel:
                text: "Captain"
            MLabel:
                text: "Matches_Played"
            MLabel:
                text: "Wins"
            MLabel:
                text: "Draws"
            MLabel:
                text: "Loses"
            MLabel:
                text: "Goal_Difference"


        BoxLayout:
            RecycleView:
                viewclass: 'MTButton'
                data: [{'text': str(x)} for x in root.data_items]
                SelectableRecycleGridLayout:
                    cols: 9
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    #orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True
                    
        BoxLayout:
            orientation: "horizontal"
            
            MLabel:
                text: ""
                size_hint: .9,1
                
            MButton:
                text: "Back"
                on_press: root.manager.current = "screen1" 
                size_hint: .1,1

